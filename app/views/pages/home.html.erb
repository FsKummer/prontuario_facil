<main class="container mx-auto mt-28 px-5 flex">
  <!-- Hero Section -->
  <div class="relative w-full bg-gradient-to-b from-white to-cyan-50 overflow-hidden">
    <!-- Decorative blur circles -->
    <div class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4">
      <div class="w-96 h-96 bg-cyan-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
    </div>
    <div class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4">
      <div class="w-96 h-96 bg-cyan-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    </div>

    <!-- Main content -->
    <div class="relative w-full mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <!-- Title -->
        <h1 class="inline-block relative">
          <span class="block text-5xl sm:text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-gray-900 to-gray-600 mb-2">
            Prontuário
          </span>
          <span class="block text-5xl sm:text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-cyan-600 to-cyan-400">
            Fácil
          </span>
        </h1>

        <!-- Subtitle -->
        <p class="mt-8 text-xl sm:text-2xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
          Crie, gerencie e rode suas estatísticas de maneira
          <span class="relative inline-block">
            <span class="relative z-10">fácil e ágil</span>
            <span class="absolute bottom-0 left-0 w-full h-3 bg-cyan-200 opacity-30 -rotate-1"></span>
          </span>
        </p>

        <!-- Buttons -->
        <div class="mt-12 flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-6">
          <%= link_to "Fazer login", new_user_session_path,
              class: "w-full sm:w-auto px-8 py-3 text-lg font-medium text-white bg-gradient-to-r from-cyan-600 to-cyan-500 rounded-lg transition-all duration-200 hover:from-cyan-500 hover:to-cyan-400 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 shadow-lg hover:shadow-xl" %>

          <%= link_to "Cadastrar", new_user_registration_path,
              class: "w-full sm:w-auto px-8 py-3 text-lg font-medium text-cyan-600 bg-white rounded-lg transition-all duration-200 hover:bg-gray-50 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 shadow-md hover:shadow-lg border border-cyan-100" %>
        </div>
      </div>
    </div>
  </div>
</main>
