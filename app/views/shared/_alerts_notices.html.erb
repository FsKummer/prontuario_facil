<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded fixed top-4 left-4 z-50 shadow-lg flex items-center" role="alert">
    <span class="mr-4"><%= notice %></span>
    <button type="button" class="ml-auto px-2 py-1" onclick="this.parentElement.style.display='none';">
      <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"/>
      </svg>
    </button>
  </div>
<% end %>

